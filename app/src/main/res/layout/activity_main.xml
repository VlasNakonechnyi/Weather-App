<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swipeRefresh"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        tools:context=".MainActivity">

        <TextView
            android:id="@+id/location_text_view"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Vinnytsia, Ukraine" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switch1"
            style="@style/Widget.Material3.CompoundButton.MaterialSwitch"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_50"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_12"
            android:textOff="@string/celsius"
            android:textOn="@string/fahrenheit"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/location_text_view"
            app:showText="true"
            tools:text="Switch" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/main_card_view"

            style="@style/Widget.Material3.CardView.Elevated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/switch1">

            <androidx.constraintlayout.widget.ConstraintLayout

                android:id="@+id/constraint_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/switch1">

                <LinearLayout
                    android:id="@+id/ll_date_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_5"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="@id/temperature_text_view"
                    app:layout_constraintEnd_toStartOf="@id/temperature_text_view"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/temperature_text_view">

                    <com.google.android.material.textview.MaterialTextView

                        android:id="@+id/date_text_view"
                        style="@style/MaterialAlertDialog.Material3.Body.Text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_5"
                        tools:text="30.01.2024" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/time_text_view"
                        style="@style/MaterialAlertDialog.Material3.Title.Text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        tools:text="9:00" />
                </LinearLayout>

                <TextView
                    android:id="@+id/temperature_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="96sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="22" />

                <TextView
                    android:id="@+id/temperature_symbol_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_5"
                    app:layout_constraintStart_toEndOf="@+id/temperature_text_view"
                    app:layout_constraintTop_toTopOf="@id/ll_date_time"
                    tools:text="C" />

                <TextView
                    android:id="@+id/wind_text_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_32"
                    app:layout_constraintEnd_toEndOf="@id/temperature_text_view"
                    app:layout_constraintStart_toStartOf="@id/ll_date_time"
                    app:layout_constraintTop_toBottomOf="@id/temperature_text_view"
                    tools:text="Wind: 17 km/h, North West" />

                <TextView
                    android:id="@+id/rain_probability_text_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:layout_constraintEnd_toEndOf="@id/temperature_text_view"
                    app:layout_constraintStart_toStartOf="@id/ll_date_time"
                    app:layout_constraintTop_toBottomOf="@id/wind_text_view"
                    tools:text="Rain probability: 2%" />

                <ImageView
                    android:id="@+id/weather_icon_image_view"
                    android:layout_width="@dimen/dp_70"
                    android:layout_height="@dimen/dp_70"

                    android:layout_margin="@dimen/dp_5"
                    android:contentDescription="@string/blankText"
                    android:scaleType="centerCrop"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                     />

                <TextView
                    android:id="@+id/sky_clarity_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/temperature_text_view" />

                <TextView
                    android:id="@+id/maxTemperatureTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/wind_text_view" />

                <TextView
                    android:id="@+id/min_temperature_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/rain_probability_text_view" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView

            android:id="@+id/material_card_view"
            style="@style/Widget.Material3.CardView.Elevated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/main_card_view">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/image_view"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_50"
                    android:scaleType="centerCrop"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                     />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/dp_10"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/image_view"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/pressure_text_view"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Precipitation: 02348" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/wind_chill_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="@dimen/dp_10"
                        tools:text="Wind chill: 1" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/cloud_cover_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="@dimen/dp_10"
                        tools:text="Cloud cover: 48%" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/uv_index_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="@dimen/dp_10"
                        tools:text="UV Index: 0" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/sunrise_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"

                        tools:text="Sunrise: 08:12" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/sunset_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"

                        tools:text="Sunset: 17:24" />
                </LinearLayout>

                <include
                    android:id="@+id/loading_layout"
                    layout="@layout/loader" />
                <include
                    android:id="@+id/permissions_layout"
                    layout="@layout/missing_permissions_layout"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginEnd="@dimen/dp_5"
            android:id="@+id/hourly_recycler_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/material_card_view"
            tools:listitem="@layout/item_hourly_info" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>